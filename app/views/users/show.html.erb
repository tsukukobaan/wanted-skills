<p id="notice" class="alert alert-success"><%= notice %></p>

<aside class="sidebar">
  <section>
    <span class="label">プロフィール画像</span>
    <h3 class="user-info">
      <%= image_for(@user) %>
    </h3>
  </section>
  
  <section>
    <span class="label">ユーザー</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>
  
  <section>
    <span class="label">メールアドレス</span>
    <h3 class="user-info"><%= @user.email %></h3>
  </section>
  
  <section>
    <span class="label">ID</span>
    <h3 class="user-info"><%= @user.id %></h3>
  </section>

  <%= link_to @user.likes.count,like_skills_user_path(@user.id) %>つのスキルにいいね!しています
  <!--<%= @user.likes.count %>つのスキルにいいね!しています-->

  <% if current_user?(@user) %>
    <section>
      <small><%= link_to 'プロフィールを編集', edit_user_path(@user) %></small>
    </section>
  <% end %>

</aside>


<ul class="skills">
  <h2><%= @title %></h2>
  <%= render 'skills/form' %>
  <%= render @skills %>
</ul>
